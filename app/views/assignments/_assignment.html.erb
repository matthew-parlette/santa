<div class="col s12 m6">
  <div class="card hoverable <% if assignment.year == Time.zone.now.year %>z-depth-3<% end %>">
    <%= render partial: 'shared/ribbon', locals: { name: assignment.year, color: "green" } %>
    <div class="card-image">
      <%= image_tag(assignment.assigned_to.avatar.url(:large), class: "") %>
      <%= link_to user_path(assignment.assigned_to) do %>
        <span class="card-title green-text text-darken-2"><%= assignment.assigned_to.first_name %></span>
      <% end %>
    </div>
    <div class="card-content">
    </div>
  </div>
</div>
