<h5 class="center-align">New Idea for <%= @user.first_name %></h5>

<div class="row">
  <div class="col s12 m6">
    <div class="card-panel white">
      <span class="black-text">
        <p>This idea will be visible to:</p>
        <p style="padding-left: 2em;">You</p>
        <p style="padding-left: 2em;">Everyone but <%= @user.first_name %></p>
      </span>
    </div>
  </div>
  <div class="col s12 m6">
    <div class="card-panel white">
      <span class="red-text">
        <p>This idea will NOT be visible to:</p>
        <p style="padding-left: 2em;"><%= @user.first_name %></p>
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s3"></div>
  <div class="col s6">
    <div class="card-panel white">
      <%= render 'form', idea: @idea %>
    </div>
  </div>
  <div class="col s3"></div>
</div>

<%= link_to 'Back', user_ideas_path(@user) %>
